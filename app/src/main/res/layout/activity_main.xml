<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:menu="@menu/menu">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:padding="@dimen/_8"
            app:logo="@mipmap/ic_launcher_round"
            app:menu="@menu/menu"
            app:subtitle="@string/subtitle"
            app:title="@string/title"
            app:titleMarginStart="28dp" />
    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_8"
        android:layout_marginEnd="16dp"
        android:autoLink="web"
        android:paddingLeft="@dimen/_8"
        android:paddingRight="@dimen/_8"
        android:text="@string/text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/appbar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <ImageView
        android:id="@+id/imageView_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/likes"
        app:layout_constraintEnd_toStartOf="@+id/textView_likes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:srcCompat="@drawable/likes"/>

    <TextView
        android:id="@+id/textView_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/_12"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_likes"
        app:layout_constraintStart_toEndOf="@+id/imageView_likes" />

    <ImageView
        android:id="@+id/imageView_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:contentDescription="@string/share"
        app:layout_constraintBottom_toBottomOf="@+id/textView_likes"
        app:layout_constraintStart_toEndOf="@+id/textView_likes"
        app:srcCompat="@drawable/share" />

    <TextView
        android:id="@+id/textView_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/_20"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_share"
        app:layout_constraintStart_toEndOf="@+id/imageView_share" />

    <ImageView
        android:id="@+id/imageView_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8"
        android:contentDescription="@string/views"
        app:layout_constraintBottom_toBottomOf="@+id/textView_share"
        app:layout_constraintEnd_toStartOf="@+id/textView_views"
        app:srcCompat="@drawable/views"/>

    <TextView
        android:id="@+id/textView_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/_5k"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_views"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>